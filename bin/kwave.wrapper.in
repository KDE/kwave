#!/bin/bash

set -e

export PREFIX=@CMAKE_BINARY_DIR@/install
make install DESTDIR=${PREFIX}

export KDEDIRS="${PREFIX}@CMAKE_INSTALL_PREFIX@/@BIN_INSTALL_DIR@:${KDEDIRS}"
export LD_LIBRARY_PATH=${PREFIX}@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@:${LD_LIBRARY_PATH}
export XDG_DATA_DIRS=${PREFIX}/@DATA_INSTALL_DIR@:${XDG_DATA_DIRS}
export COLON_SEPARATED="XDG_DATA_DIRS"
export PATH=${PREFIX}@CMAKE_INSTALL_PREFIX@/@BIN_INSTALL_DIR@:${PATH}

# for testing other languages
# export LANG=de_DE.UTF-8@euro
# export LANG=en_EN
# export LANG=cs_CS
# export LANG=es_ES
# export LANG=fr_FR
#
# export KDE_LANG=${LANG}
# export KDELANG=${LANG}
# export LC_ALL=${LANG}

# when using new icons:
# rm -f /var/tmp/kdecache-$USER/icon-cache.kcache

time ${PREFIX}@CMAKE_INSTALL_PREFIX@/@BIN_INSTALL_DIR@/kwave --logfile=/var/tmp/kwave.log --nofork "$@"

### EOF ###
