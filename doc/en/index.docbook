    <sect1 id="plugin_sect_volume"><title id="plugin_title_volume">&no-i18n-plugin_volume; (Volume)</title>
    <screenshot>
	<screeninfo>Screenshot</screeninfo>
	<mediaobject>
	    <imageobject>
		<imagedata fileref="kwave-plugin-volume.png" format="PNG"/>
	    </imageobject>
