		<colspec colname='c2' colnum='4'/>
		<colspec/>
		<colspec colname='c3' colnum='7'/>
		<colspec/>
		<colspec colname='c4' colnum='10'/>
		<colspec/>
		<thead>
		    <row>
			<entry colname='c1'
>оригинал</entry
><entry
>кодировка</entry
><entry
>&no-i18n-unicode-0x0020;</entry>
			<entry colname='c2'
>оригинал</entry
><entry
>кодировка</entry
><entry
>&no-i18n-unicode-0x0020;</entry>
			<entry colname='c3'
>оригинал</entry
><entry
>кодировка</entry
><entry
>&no-i18n-unicode-0x0020;</entry>
			<entry colname='c4'
>оригинал</entry
