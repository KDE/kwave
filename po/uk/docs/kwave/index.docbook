><entry
><parameter
>назва файла</parameter
>:</entry>
		<entry
>назва файла для збереження (необов’якова)</entry
></row>
	</tbody
></tgroup
></informaltable
></simplesect>
	</sect2>

	<!-- @COMMAND@ saveselect() -->
	<sect2 id="cmd_sect_saveselect"
><title id="cmd_title_saveselect"
>&no-i18n-cmd_saveselect;</title>
	<simplesect>
